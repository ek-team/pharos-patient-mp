/* pages/myOrder/myOrder.wxss */
.navTop{
    display: flex;
    flex-direction: row;
    padding-left:62rpx;
    background-color: #fff;
    overflow-x: scroll;
}
.navItem{
    min-width: 112rpx;
    margin-right: 48rpx;
    display: flex;
    justify-content: center;
    padding-bottom: 10rpx;
    font-size: 13px;
    color: #888888;
    display: flex;
    justify-content: center;
    white-space:nowrap;
}
.activeItem{
    margin-right: 48rpx;
    min-width: 112rpx;
    border-bottom: 8rpx solid #2097F3;
    display: flex;
    justify-content: center;
    flex-wrap: nowrap;
    padding-bottom: 10rpx;
    white-space:nowrap;

    font-size: 14px;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #333333;
}

.orderContainer{
    display: flex;
    flex-direction: column;
}
.orderItem{
    margin-top: 24rpx;
    background: #fff;
    display: flex;
    flex-direction: column;
    padding: 24rpx 30rpx 22rpx 32rpx;
}
.orderItem:last-child{
    margin-bottom: 80rpx;
}
.orderTop{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #888888;
    font-size: 13px;
    line-height: 36rpx;
    margin-bottom: 32rpx;
}
.orderInfoContainer{
    display: flex;
    flex-direction: column;
    margin-bottom: 24rpx;
}
.medecineItem{
    display: flex;
    flex-direction: row;
    margin-bottom: 28rpx;
}
.imgBox{
    margin-right: 24rpx;
    width: 156rpx;
    height: 156rpx;
}
.goodsPictrue{
    width: 156rpx;
    height: 156rpx;
    background-color: #ccc;
}
.rightInfoBox{
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex: 1;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #888888;
    font-size: 13px;
    line-height: 36rpx;
}
.goodsName{
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    font-size: 16px;
    color: #333333;
    line-height: 44rpx;
    display: flex;
    flex-direction: row;
}
/* 赠送标识 */
.freeTitle{
    width: 88rpx;
    height: 48rpx;
    background: #F5FBFF;
    border-radius: 8px;
    border: 1px solid #A5D8FF;
    font-size: 13px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #65BCFF;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 24rpx;
}
.infoItem{
    margin-bottom: 8rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.concatService{
    display: flex;
    align-items: center;
    justify-content: flex-end;
    color:#888;
    font-size: 14px;
    /* margin-right: 32rpx; */
    margin-bottom: 10rpx;
    /* justify-content: ; */
}
.customerServiceIcon{
    width: 38rpx;
    height: 38rpx;
    margin-right: 20rpx;
}
.bottomContainer{
    display: flex;
    flex-direction: column;
}
.payInfo{
    display: flex;
    /* justify-content: flex-end; */
    justify-content: space-between;
    align-items: center;
    font-size: 15px;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #333333;
}
.creatTimeText{
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #888888;
    font-size: 13px;
    line-height: 36rpx;
}
.optionContainer{
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    margin-top: 32rpx;
    margin-bottom: 20rpx;
}
.buttonItem{
    width: 200rpx;
    height: 72rpx;
    border-radius: 36px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 15px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    line-height: 42px;
}
.cancelBtn{
    border: 1px solid #DBDBDB;
    color: #585858;
    margin-right: 32rpx;
}
.confirmBtn{
    border: 1px solid #F79600;
    color: #F79600;
}
.friendsPayBtn{
    border: 1px solid #2097F3;
    color:#2097F3;
}
.payButton{
    margin-left: 20rpx;
}
/* 列表为空 */
.noneContianer{
    display: flex;
    justify-content: center;
    align-items: center;
}
.noneOrder{
    width: 354rpx;
    height: 234rpx;
    object-fit: cover;
    margin-top: 136rpx;
}