/* pages/createRetrieveOrder/createRetrieveOrder.wxss */
.orderContainer{
    display: flex;
    flex-direction: column;
}
.receiptContainer{
    margin: 24rpx 30rpx 0rpx 32rpx;
    padding: 28rpx 20rpx 0rpx 20rpx;
    background-color: #fff;
    margin-top: 24rpx;
    border-radius: 16rpx;
}
.receiptTitle{
    font-size: 16px;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: bold;
    color: #333333;
    line-height: 44rpx;
    margin-bottom: 28rpx;
}
.receiptUserInfo{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-bottom: 32rpx;
}
.remarkContent{
    display: flex;
    flex-direction: column;
}
.remarkDetail{
    width: 100%;
    height: 148rpx;
    /* background-color:#FAFAFA ; */
    background-color:#eeeeee;
    padding: 18rpx 20rpx;
    box-sizing: border-box;
    font-size: 15px;
    color: #333;
    margin-top: 20rpx;
}
.infoLeft{
    font-size: 14px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #333333;
    line-height: 40rpx;
}
.infoRight{
    font-size: 13px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #888888;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.splitTime{
    margin: 0 20rpx;
}
.inputContent{
    display: flex;
    align-items: center;
    text-align: right;
}
.picker{
    display: flex;
    align-items: center;
    margin-right: 20rpx;
}
.info{
    margin-right: 26rpx;
    max-width: 364rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    text-align: right;
}
.detailAddress{
    margin-right: 20rpx;
    width: 400rpx;
    /* text-align: right;   */
    background-color: #eeeeee;
    /* border: 1px solid #c5c5c5; */
    padding: 8rpx 10rpx;
    border-radius: 8rpx;
    /* background-color:#f8f8f8; */
}
.inputContainer{
    font-size: 13px;
    color: #333;
}
.infoName{
    margin-right: 10rpx;
}
.rightIcon{
    width: 36rpx;
    height: 36rpx;
}

/* 地址选择 */
.addressItem{
    /* width: 688rpx; */
    height: 92rpx;
    margin: 0 auto;
    /* border-bottom: 2rpx solid#E2E2E2; */
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}
.addressText{
    font-size: 14px;
    font-weight: 400;
    color: #999;
}
.addressContent{
    flex: 1;
}
.addressPlaceholder {
    font-size: 26rpx;
    font-weight: 400;
    color: #cecece;
    text-align: end;
}
.addressInput{
    text-align: right;
    font-size: 15px;
    color: #333;
}
.addressPicker{
    text-align: right;
    font-size: 15px;
    color: #333;
}
.rightContainer{
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}
.addressDetail{
    width: 688rpx;
    margin: 0 auto;
    padding-top: 26rpx;
}
.addressTextarea{
    margin-top: 18rpx;
}

.commitOption{
    width: 100%;
    position: fixed;
    bottom: 0;
    background: #3C9EE9;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20rpx 0;
    font-size: 16px;
    font-weight: bold;
    z-index: 99;
}
/* 上传图片 */
.bottomBox{
    margin-bottom: 200rpx;
}
.pictureContainer{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}
.cameraContainer{
    width: 140rpx;
    height: 140rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: #F8FAFC;
    border-radius: 4rpx;
    margin-right: 16rpx;
    margin-bottom: 20rpx;
}
.cameraIcon{
    width: 56rpx;
    height: 56rpx;
}
.remindText{
    font-size: 13px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #888888;
    line-height: 32rpx;
}
.pictureListContainer{
    width: 140rpx;
    height: 140rpx;
    margin-right: 16rpx;
    margin-bottom: 20rpx;
    position: relative;
}
.pictureImg{
    width: 140rpx;
    height: 140rpx;
}
.closeIcon{
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    right: -10rpx;
    top: -10rpx;
    background-color: #fff;
    border-radius: 50%;
}
.rightContainer{
    display: flex;
    flex:1;
    align-items: center;
}
.rightRemindText{
    font-size: 13px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #C9C9C9;
    line-height: 36rpx;
}