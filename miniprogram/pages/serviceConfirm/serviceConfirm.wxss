/* pages/serviceConfirm/serviceConfirm.wxss */
.confirmView{
  margin-top: 24rpx;
  width: 100%;
}
.serviceItem{
  width: 100%;
  background-color: #fff;
  padding:32rpx 30rpx 0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.servicePic{
  width: 156rpx ;
  height: 156rpx ;
  object-fit: cover;
  border-radius: 8rpx;
  background-color: #ccc;
}
.serviceRight{
  height: 156rpx;
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
  padding: 14rpx 0 ;
  padding-left: 24rpx;
  box-sizing: border-box;
}
.serviceName{
  color: #333;
  font-size: 32rpx;
  font-weight: 550;

}
.serviceInfo{
  width: 100%;
  color: #888;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
/* 医生指导 */
.doctorGuidance{
  width: 100%;
  background-color: #fff;
  padding: 32rpx 30rpx 38rpx;
  box-sizing: border-box;
  margin-top: 24rpx;
  margin-bottom: 188rpx;
}
.doctorView{
  width: 100%;
  background-color: #fff;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.serviceIntroduceBox{
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
}
.serviceDetailExplain{
  margin-top: 16rpx;
  color: #888;
  font-size: 26rpx;
  /* border: 1px solid rgb(209, 208, 208); */

}
.serviceRightTop{
  display: flex;
}
.gift{
  width: 88rpx;
  height: 48rpx;
  background: #F5FBFF;
  border-radius: 8rpx;
  border: 2rpx solid #A5D8FF;
  color: #65BCFF;
  font-size: 26rpx;
  box-sizing: border-box;
  line-height: 48rpx;
  text-align: center;
  margin-left: 16rpx;
}
.serviceRightBottom{
  color: #888;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}
/* 选择主治医生和就诊人 */
.chooseTeam{
  width: 690rpx;
  background: #FFF8EE;
  border-radius: 24rpx;
  padding: 30rpx 35rpx 40rpx;
  box-sizing: border-box;
  margin-top: 38rpx;
}
.notice{
  height: 48rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  border: 2rpx solid #F79600;
  color: #F79600 ;
  font-size: 24rpx;
  padding: 0 18rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.tishi{
  width: 28rpx;
  height: 28rpx;
  object-fit: cover;
  margin-right: 10rpx;
}
.chooseView{
  width: 620rpx;
  height: 84rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  box-sizing: border-box;
}
.chooseTitle{
  color: #333;
  font-size: 30rpx;
  font-weight: 550;
}
.choosePlaceholder{
  color: #888;
  font-size: 26rpx;
}
/* 下一步 */
.nextView{
  width: 100%;
  height: 188rpx;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
}
.confirm{
  width: 690rpx !important;
  height: 80rpx;
  background: linear-gradient(270deg, #3C9EE9 0%, #6FC3F6 100%);
  border-radius: 8rpx;
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
  margin-top: 16rpx;
}
