/* pages/consultation/consultation.wxss */
.doctor {
  width: 688rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  box-sizing: border-box;
  margin: 0 auto;
  margin-top: 24rpx;
  display: flex;
  align-items: center;
}

.pic {
  width: 128rpx;
  height: 128rpx;
  object-fit: cover;
  border-radius: 50%;
  background-color: #ccc;
  margin-right: 32rpx;
}

.doctorName {
  font-size: 32rpx;
  color: #333;
}

.doctorInfo {
  font-size: 26rpx;
  color: #888;
  margin-top: 16rpx;
}

/* 选择就诊人信息框 */
.chooseview {
  width: 688rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  margin: 0 auto;
  margin-top: 24rpx;

}

.chooseTop {
  padding: 30rpx 16rpx 24rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.chooseText {
  color: #333;
  font-size: 32rpx;
}

.patientManage {
  color: #888;
  font-size: 26rpx;
  display: flex;
  align-items: center;
}

.right {
  width: 36rpx;
  height: 36rpx;
  object-fit: cover;
  margin-left: 26rpx;
}

/* 就诊人列表 */
.patientList {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 0 32rpx;
  box-sizing: border-box;

}

.patientItem {
  width: 290rpx;
  height: 182rpx;
  background: #F0F9FF;
  border-radius: 8px;
  margin-bottom: 48rpx;
  position: relative;
  padding: 35rpx 0 0 35rpx;
  box-sizing: border-box;
}

.patientItemChecked {
  border: 2rpx solid #2097F3;
}

.rightBlue {
  width: 56rpx;
  height: 40rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}
.patientName{
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
}
.patientInfo{
  color: #888;
  font-size: 26rpx;
  margin-top: 34rpx;
}
.patientInfo text{
  margin-right: 35rpx;
}
/* 添加就诊人 */
.addPatient{
  width: 290rpx;
  height: 182rpx;
  background: #F8FAFC;
  border-radius: 8rpx;
  margin-bottom: 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.addBtn{
  width: 48rpx;
  height: 48rpx;
  object-fit: cover;
}
.addText{
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 20rpx;

}
/* 下一步 */
.confirmView{
  width: 100%;
  height: 188rpx;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
}
.confirm{
  width: 690rpx !important;
  height: 80rpx;
  background: linear-gradient(270deg, #3C9EE9 0%, #6FC3F6 100%);
  border-radius: 8rpx;
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
  margin-top: 16rpx;
}
