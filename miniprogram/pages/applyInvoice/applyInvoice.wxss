/* pages/applyInvoice/applyInvoice.wxss */
.allContainer{
    display: flex;
    flex-direction: column;
}
.formItem{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-bottom: 1px solid #ececec;
    padding: 30rpx 20rpx;
    background-color: #fff;
    font-size: 15px;
    color:#333;
}
.imgItem{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 30rpx 20rpx;
    font-size: 17px;
    font-weight: 500;
    color:#000;
    border-bottom: none;
    background-color:rgb(248, 248, 248);
}

.mustText{
    color: red;
}
.arrow{
    width: 36rpx;
    height: 36rpx;
    margin-left: 10rpx;
}
.imgRight{
    color:#9e9e9e;
}
.itemRight{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.inputItem{
    text-align: right;
}
.marginRadio{
    margin-right: 20rpx;
}
.splitContainer{
    margin:30rpx ;
}
.submitContianer{
    display: flex;
    justify-content: center;
    align-items: center;
    background-color:#1989fa;
    margin: 40rpx;
    color: #fff;
    padding: 20rpx 0;
    border-radius: 80rpx;
}