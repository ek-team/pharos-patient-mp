/* pages/applyDetail/applyDetail.wxss */
.myState {
  width: 690rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx 32rpx 40rpx;
  box-sizing: border-box;
  margin-top: 24rpx;
}

.mystateTitle {
  color: #333;
  font-size: 32rpx;
  font-weight: 550;
}

.myStateContent {
  font-size: 26rpx;
  font-weight: 400;
  color: #888888;
  word-break: break-all;
  line-height: 36rpx;
  margin-top: 24rpx;
}

.statePic {
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.stateImg {
  background-color: #333;
  width: 190rpx;
  height: 190rpx;
  border-radius: 4rpx;
  margin-right: 18rpx;
  margin-bottom: 18rpx;

}

/* 其他 */
.otherState {
  width: 690rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  margin-top: 24rpx;
  padding: 38rpx 32rpx 52rpx;
  box-sizing: border-box;

}
.otherCell{
  display: flex;
  align-items: center;
  margin-top: 28rpx;

}
.otherCellTitle{
  color: #888;
  font-size: 26rpx;
  width: 150rpx;
}
.otherCellBtn{
  display: flex;
  align-items: center;
}
.greeyBtn{
  width: 120rpx;
  height: 48rpx;
  background: #F4F4F4;
  border-radius: 8rpx;
  color: #333;
  font-size: 26rpx;
  text-align: center;
  line-height: 48rpx;
  margin-right: 28rpx;
}
.blueBtn{
  background-color: #65BCFF;
  color: #fff;
}