/* pages/applyPay/applyPay.wxss */
.applyInfo {
  width: 688rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 44rpx 34rpx 0;
  box-sizing: border-box;
  margin-top: 24rpx;
}

.applyCell {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.applyTitle {
  color: #333;
  font-size: 28rpx;

}

.applyValue {
  color: #888888;
  font-size: 26rpx;

}

/* 支付方式 */
.payBox {
  width: 688rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx 20rpx;
  box-sizing: border-box;
  margin-top: 24rpx;
}

.payMethods {
  color: #333;
  font-size: 30rpx;
  font-weight: 600;
  margin-left: 14rpx;
  margin-bottom: 34rpx;
}

.payCell {
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.payLeft {
  display: flex;
  align-items: center;
}

.payImg {
  width: 56rpx;
  height: 56rpx;
  object-fit: cover;

}

.peyText {
  color: #333;
  font-size: 28rpx;
  margin-left: 28rpx;
  margin-right: 10rpx;
}

/* 确认部分 */
.confirmView {
  width: 100%;
  height: 188rpx;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
}

.confirm {
  width: 690rpx !important;
  height: 80rpx;
  background: linear-gradient(270deg, #3C9EE9 0%, #6FC3F6 100%);
  border-radius: 8rpx;
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
  margin-top: 16rpx;
}