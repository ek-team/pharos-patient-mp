/* pages/chooseServiceTeam/chooseServiceTeam.wxss */
.teamView {
  width: 688rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 18rpx 30rpx 24rpx 26rpx;
  box-sizing: border-box;
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.teamView:last-child{
  margin-bottom: 210rpx;
}

.teamName {
  color: #333;
  font-weight: 500;
  font-size: 32rpx;
}

.teamFocus {
  color: #888;
  font-size: 26rpx;
  margin-top: 6rpx;
}


.teamLeft {}

.teamPic{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  min-height: 100rpx;
  box-sizing: border-box;
}
.userContainer{
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  margin-right: 24rpx;
  color:#9c9c9c;
  font-size: 14px;
  width: 100rpx;
  justify-content: center;
}
.headImg{
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  background-color: #F4F4F4;
  
  margin-bottom: 14rpx;
}
/* 确认部分 */
.confirmView{
  width: 100%;
  height: 188rpx;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
}
.confirm{
  width: 690rpx !important;
  height: 80rpx;
  background: linear-gradient(270deg, #3C9EE9 0%, #6FC3F6 100%);
  border-radius: 8rpx;
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
  margin-top: 16rpx;
}