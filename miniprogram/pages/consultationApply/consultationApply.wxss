/* pages/consultationApply/consultationApply.wxss */
.doctor {
  width: 688rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx 30rpx;
  box-sizing: border-box;
  margin: 0 auto;
  margin-top: 24rpx;
  display: flex;
  align-items: center;
}

.pic {
  width: 128rpx;
  height: 128rpx;
  object-fit: cover;
  border-radius: 50%;
  background-color: #ccc;
  margin-right: 32rpx;
}

.doctorName {
  font-size: 32rpx;
  color: #333;
}

.doctorInfo {
  font-size: 26rpx;
  color: #888;
  margin-top: 16rpx;
}
