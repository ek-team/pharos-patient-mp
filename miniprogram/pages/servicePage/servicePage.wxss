/* pages/service/service.wxss */
.navTop{
    display: flex;
    flex-direction: row;
    padding-left:62rpx;
    background-color: #fff;
    overflow-x: scroll;
}
.navItem{
    min-width: 112rpx;
    margin-right: 48rpx;
    display: flex;
    justify-content: center;
    padding-bottom: 10rpx;
    font-size: 13px;
    color: #888888;
    display: flex;
    justify-content: center;
    white-space:nowrap;
}
.activeItem{
    margin-right: 48rpx;
    min-width: 112rpx;
    border-bottom: 8rpx solid #2097F3;
    display: flex;
    justify-content: center;
    flex-wrap: nowrap;
    padding-bottom: 10rpx;
    white-space:nowrap;

    font-size: 14px;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #333333;
}

.orderContainer{
    display: flex;
    flex-direction: column;
}
.orderItem{
    /* margin-top: 24rpx; */
    background: #fff;
    display: flex;
    flex-direction: column;
    padding: 24rpx 30rpx 22rpx 32rpx;
    margin: 24rpx 30rpx 24rpx 32rpx;
    border-radius: 16rpx;
}
.orderItem:last-child{
    margin-bottom: 120rpx;
}
.orderTop{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #888888;
    font-size: 13px;
    line-height: 36rpx;
    margin-bottom: 32rpx;
}
.orderInfoContainer{
    display: flex;
    flex-direction: column;
    margin-bottom: 24rpx;
}
.medecineItem{
    display: flex;
    flex-direction: row;
}
.imgBox{
    margin-right: 24rpx;
}
.goodsPictrue{
    width: 156rpx;
    height: 156rpx;
    /* background: rgb(212, 212, 212); */
}
.rightInfoBox{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex: 1;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #888888;
    font-size: 13px;
    line-height: 36rpx;
}
.goodsName{
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    font-size: 16px;
    color: #333333;
    line-height: 44rpx;
    display: flex;
    flex-direction: row;
}
.goodsNum{
    margin-left: 20rpx;
    font-size: 13px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #888888;
}
.infoItem{
    margin-bottom: 8rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.rightIconBox{
    display: flex;
    justify-content: center;
    align-items: center;
}
.rightIcon{
    width: 36rpx;
    height: 36rpx;
}
.bottomContainer{
    display: flex;
    flex-direction: column;
}
.payInfo{
    display: flex;
    justify-content: flex-end;
    font-size: 15px;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #333333;
}
.optionContainer{
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    margin-top: 32rpx;
}
.buttonItem{
    width: 200rpx;
    height: 72rpx;
    border-radius: 36px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 15px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    line-height: 42px;
}
.cancelBtn{
    border: 1px solid #DBDBDB;
    color: #585858;
    margin-right: 32rpx;
}
.confirmBtn{
    border: 1px solid #F79600;
    color: #F79600;
}
/* 截止有效期 */
.serviceExpiredTime{
    font-size: 13px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #888888;
    line-height: 36rpx;
    margin-top: 20rpx;
}
/* 列表为空 */
.noneContianer{
    display: flex;
    justify-content: center;
    align-items: center;
}
.noneOrder{
    width: 354rpx;
    height: 234rpx;
    object-fit: cover;
    margin-top: 136rpx;
}
.backContianer{
    box-sizing: border-box;
    position: fixed;
    bottom: 0;
    background: #2097F3;
    width: 100%;
    padding: 20rpx 0;
    color: #fff;
    display: flex;
    justify-content: center;
}
.backName{
    margin: 0 10rpx;
    font-size: 17px;
}