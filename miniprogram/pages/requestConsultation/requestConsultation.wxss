/* pages/requestConsultation/requestConsultation.wxss */
.backContainer{
    background-color: #fff;
    margin: 24rpx 30rpx 24rpx 32rpx;
    border-radius: 16rpx;
}
.headContiner{
    display: flex;
    flex-direction: row;
    padding: 24rpx 30rpx 24rpx 32rpx;
}
/* 团队头像 */
.avatarContainer{
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
    width: 120rpx;
    height: 120rpx;
    background-color: #F4F4F4;
    margin-right: 32rpx;
}
.twoAvatar{
    width: 60rpx;
    height: 60rpx; 
    background-color: #F4F4F4;
}
.twoAvatar:last-child{
    /* margin-left: 5rpx; */
}
.threeAvatar{
    width: 40rpx;
    height: 40rpx;
    background-color: #F4F4F4;
}
/* 个人头像 */
.oneAvatarContainer{
    margin-right: 32rpx;
}
.oneAvatarList{
    height: 120rpx;
}
.twoAvatarList{
    height: 60rpx;
}
.threeAvatarList{
    height: 40rpx;
}
.headImg{
    width: 120rpx;
    height: 120rpx;
    background-color: #F4F4F4;
    /* border-radius: 50%; */
    
}
.doctorInfo{
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.doctorName{
    font-size: 16px;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: bold;
    color: #333333;
    line-height: 44rpx;
    margin-bottom: 16rpx;
}
.jobInformation{
    font-size: 13px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #888888;
    line-height: 36rpx;
    min-height: 36rpx;
}
.userInfoContainer{
    display: flex;
    flex-direction: column;
    padding: 30rpx 30rpx 38rpx 32rpx;
}
.infoTitle{
    font-size: 16px;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: bold;
    color: #333333;
    line-height: 44rpx;
    margin-bottom: 24rpx;
}
/* 病史选择 */
.remindTitle{
    margin-top: 38rpx;
}
.medicalHistoryContainer{
    display: flex;
    flex-direction: row;
    margin-bottom: 34rpx;
}

.itemTitle{
    width: 120rpx;
    font-size: 13px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #888888;
    line-height: 36rpx;
    margin-right: 64rpx;
}
/* 选中 */
.checkItem{
    width: 120rpx;
    height: 48rpx;
    background: #65BCFF;
    border-radius: 8rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 28rpx;

    font-size: 26rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #FFFFFF;
    line-height: 36rpx;
}
/* 未选中 */
.noCheckItem{
    width: 120rpx;
    height: 48rpx;
    background: #F4F4F4;
    border-radius: 8rpx;
    color:#fff;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 28rpx;

    font-size: 13px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #333333;
    line-height: 36rpx;
}
.inputContainer{
    /* height: 218rpx; */
    background: #FDFDFD;
    border-radius: 8rpx;
    border: 1px solid #EAEAEA;
    padding: 24rpx 16rpx 24rpx 14rpx;
    margin-bottom: 48rpx;
}
.inputContent{
    height: 190rpx;
    font-size: 13px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #333;
    line-height: 36rpx;
}
.remarkPlaceholder{
    font-size: 13px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #C9C9C9;
    line-height: 36rpx;
}
/* 上传图片 */
.pictureContainer{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}
.cameraContainer{
    width: 140rpx;
    height: 140rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: #F8FAFC;
    border-radius: 4rpx;
    margin-right: 16rpx;
    margin-bottom: 20rpx;
}
.cameraIcon{
    width: 56rpx;
    height: 56rpx;
}
.remindText{
    font-size: 11px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #888888;
    line-height: 32rpx;
}
.pictureListContainer{
    width: 140rpx;
    height: 140rpx;
    margin-right: 16rpx;
    margin-bottom: 20rpx;
    position: relative;
}
.pictureImg{
    width: 140rpx;
    height: 140rpx;
}
.closeIcon{
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    right: -10rpx;
    top: -10rpx;
    background-color: #fff;
    border-radius: 50%;
}
.rightContainer{
    display: flex;
    flex:1;
    align-items: center;
}
.rightRemindText{
    font-size: 13px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #C9C9C9;
    line-height: 36rpx;
}
.agreementContainer{
    padding: 24rpx 22rpx;
    margin-bottom: 220rpx;
    display: flex;
    flex-direction: column;
}
.blackText{
    font-size: 14px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #333333;
    line-height: 40rpx;
}
.blueText{
    color:#2097F3;
}
.explainText{
    margin-bottom: 10rpx;
}
.footerContainer{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 188rpx;
    display: flex;
    background-color: #fff;
    box-sizing: border-box;
    padding: 16rpx 30rpx 0rpx 32rpx;
}
.bottomContainer{
    display: flex;
    flex-direction: row;
    box-sizing: border-box;
    width: 100%;
}
.previousStep{
    /* width: 344px; */
    box-sizing: border-box;
    display: flex;
    flex: 1;
    justify-content: center;
    align-items: center;
    height: 80rpx;
    border-radius: 8rpx 0rpx 0rpx 8rpx;
    border: 2px solid #6CC0F5;
    font-size: 17px;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #43A3EB;
    line-height: 48rpx;
}
.commitBtn{
    display: flex;
    flex: 1;
    justify-content: center;
    align-items: center;
    height: 80rpx;
    background: linear-gradient(270deg, #3C9EE9 0%, #6FC3F6 100%);
    border-radius: 0rpx 8rpx 8rpx 0rpx;
    font-size: 17px;
    font-family: PingFangSC-Medium, PingFang SC;
    font-weight: 500;
    color: #FFFFFF;
    line-height: 48rpx;
}