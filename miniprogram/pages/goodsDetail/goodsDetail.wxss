/* pages/goodsDetail/goodsDetail.wxss */
.medicineDetail {
  width: 100%;
}

.swiper-image {
  /* width: 100%; */
  height: 100%;
}

.slideImage {
  height: 100%;
  width: 100%;
}

/* 产品标题 */
.goodsTitle {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  color: #333;
  font-size: 32rpx;
  line-height: 44rpx;
  background-color: #fff;
  font-weight: bold;
}

/* 产品的相关服务 */
.goodsService {
  width: 100%;
  background-color: #fff;
  margin-top: 24rpx;
  padding: 22rpx 32rpx 18rpx;
  box-sizing: border-box;

}
.introductionsImage{
  width:100%;
}

/* 详情 */
.detailView {
  width: 100%;
  height: 96rpx;
  background-color: #fff;
  margin: 24rpx 0;
  box-sizing: border-box;
}

.detailTitle {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.detailTitleTop{
  position: fixed;
  top:0rpx;
  margin-top: 0;
  z-index: 99;
}

.detailTitleItem {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;

}

.detailName {
  color: #333;
  font-size: 32rpx;
}

.bluecheck {
  max-width: 126rpx;
  height: 8rpx;
  background: linear-gradient(270deg, #3C9EE9 0%, #6FC3F6 100%);
  border-radius: 6rpx;
  margin: 0 auto;
  margin-top: -20rpx;
}

/* fixed */
.bottomBox {
  width: 100%;
  height: 168rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx 32rpx 0 54rpx;
  box-sizing: border-box;
  display: flex;
  /* align-items: center; */
}

.bottomIcon {
  width: 48rpx;
  height: 48rpx;
  object-fit: cover;
}

.icon {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 54rpx;

}

.iconText {
  color: #2097F3;
  font-size: 28rpx;
  width: 80rpx;
  text-align: center;
}

.reserve {
  width: 446rpx !important;
  height: 80rpx;
  background: linear-gradient(270deg, #3C9EE9 0%, #6FC3F6 100%);
  border-radius: 8rpx;
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
  margin: 0;
}
.reserveGray {
  width: 446rpx !important;
  height: 80rpx;
  background: linear-gradient(270deg, #727374 0%, #727374 100%);
  border-radius: 8rpx;
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
  margin: 0;
}
/* 弹框 */
.modal {
  width: 100%;
  background: #fff;
  border-radius: 16rpx 16rpx 0 0;
  padding: 36rpx 30rpx;
  box-sizing: border-box;
}

.modalTop {
  display: flex;
  align-items: center;
  margin-bottom: 48rpx;
}

.moadlPic {
  width: 128rpx;
  height: 128rpx;
  border-radius: 8rpx;
  background: #333;
}

.modalTitle {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-left: 28rpx;
}
.selectedText{
  display: flex;
  flex-direction: row;
}
/* 选择后的价格 */
.choosePrice{
  color: #43A3EB;
  font-size: 28rpx;
  margin-top: 26rpx;
  font-weight: 500;
}
/* 选择后的描述备注 */
.cheooseRemark{
  max-width: 350rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color:#888888;
  font-size: 26rpx;
  margin-top: 26rpx;
  margin-left: 40rpx;
  margin-right: 20rpx;
}
.modalChoose {
  display: flex;
  align-items: center;
  flex-wrap: wrap;

}

.chooseView {
  height: 64rpx;
  min-width: 170rpx;
  padding: 0 10rpx;
  background: #f3f3f3;
  border-radius: 12rpx;
  margin: 20rpx 20rpx 20rpx 0;
  line-height: 64rpx;
  text-align: center;
  color: #888;
  font-size: 26rpx;
  box-sizing: border-box;


}

.chooseViewCheck {
  background: #F5FBFF;
  border: 2rpx solid #43A3EB;
  color: #43A3EB;
  box-sizing: border-box;

}
.disabledCheck{
  background-color: #fcfcfc;
  color:rgb(187, 186, 186);
}


.operateBtn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 60rpx;
  /* position: absolute;
  bottom:92rpx;
  left: 0;
  right: 0; */
}

.cancelBtn {
  width: 344rpx;
  height: 80rpx;
  border-radius: 8rpx 0 0 8rpx;
  border: 4rpx solid #6CC0F5;
  box-sizing: border-box;
  color: #6CC0F5;
  text-align: center;
  line-height: 80rpx;
}

.confirmBtn {
  width: 344rpx;
  height: 80rpx;
  background: linear-gradient(270deg, #3C9EE9 0%, #6FC3F6 100%);
  border-radius: 0 8rpx 8rpx 0;
  box-sizing: border-box;
  color: #fff;
  text-align: center;
  line-height: 80rpx;

}
.disabeldStatus{
  background: linear-gradient(270deg, #a5a7a8 0%, rgb(233, 233, 233) 100%);
  background: rgb(233, 233, 233);
}

.detailInfo {
  margin-bottom: 108rpx;
  /* max-height: 1000rpx; */
  overflow-y: scroll;
  /* height: 800rpx; */
}
.colseScroll{
  height:100rpx;
}
.showScroll{
  height: fit-content;
  /* margin-bottom: 168rpx; */
}
.detailInfoItem{
  padding: 20rpx 10rpx;
  box-sizing: border-box;
  margin-bottom: 100rpx;
}
