/* pages/my/my.wxss */
.topView{
  width: 100%;
  height: 444rpx;
  position: relative;
}
.mineBg{
  width: 100%;
  height: 444rpx;
  object-fit: cover;
  position: absolute;
  top: 0;
  z-index: -1;
}
/* 头像 */
.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #fff;
}
/* 姓名 */
.name{
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  margin-left: 24rpx;
}
.info{
  display: flex;
  align-items: center;
  margin-top: 186rpx;
  margin-left: 60rpx;
}
.orderView{
  width: 686rpx;
  height: 288rpx;
  height: 200rpx;
  background: #FFFFFF;
  box-shadow: 0 4rpx 14rpx 2rpx rgba(239,235,216,0.23);
  border-radius: 8rpx;
  margin-top: -88rpx;
  z-index: 9;
}
.retrieveView{
  margin-top: 28rpx;
}
/* 我的订单*/
.orderText{
  width: 100%;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 28rpx;
  box-sizing:border-box;
}
.myOrderText{
  color: #333;
  font-size: 30rpx;
  font-weight: 500;
}
.allText{
  color: #888;
  font-size: 26rpx;
  font-weight: 400;
}
.orderStatus{
  padding:24rpx 40rpx 0  46rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  justify-content: space-around;
}
.orderItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.orderIcon{
  width: 72rpx;
  height: 72rpx;
  object-fit: cover;
}
.orderName{
  color: #888;
  font-size: 26rpx;
  margin-top: 24rpx;
}
.orderNum{
  height: 32rpx;
  min-width: 32rpx;
  border-radius: 50%;
  background: #F64B21;
  font-size: 24rpx;
  color: #fff;
  line-height: 32rpx;
  text-align: center;
  position: absolute;
  top:-10rpx ;
  right: -10rpx;
}
.menuview{
  width: 686rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  margin: 0 auto;
  margin-top: 24rpx;
  padding: 16rpx;
  box-sizing: border-box;
}
.menuItem{
  height: 94rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #EBEBEB;
}
.menuItem:last-child{
  border-bottom:none;
}
.menuLeft{
  display: flex;
  align-items: center;
}
.menuPic{
  width: 48rpx;
  height: 48rpx;
  object-fit: cover;
}
.menuName{
  color: #333;
  font-size: 26rpx;
  margin-left: 16rpx;
}
.arrow{
  width: 36rpx;
  height: 36rpx;
  object-fit: cover;
}
